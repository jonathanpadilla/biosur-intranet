{% extends "SucursalBundle:Layouts:body.html.twig" %}
{% block content %}
  	<div class="row">
	  	<div class="col-md-12">
	  		<div class="content-header">
	        <h2> Agregar <b class="text-biosur">Nueva Sucursal</b> al sistema.</h2>
	      </div>
				<div id="alerts"></div>
	  		<div class="panel">
					<div class="panel-heading">
						<div class="topbar_options"><!--
				         --><div class="btn-group">
				                  <button type="button" id="button_guardarsucursal" class="btn btn-md btn-biosur"><i class="fa fa-save"> </i> Guardar</button>
				              </div><!--
				         --><div class="btn-group">
				                  <button type="button" class="btn btn-md btn-biosur" data-id="8" data-toggle="modal" data-target="#nuevoinsumo"><i class="fa fa-plus"> </i> Agregar Insumo</button>
				              </div><!--
				         --><!--<div class="btn-group">
				                    <button type="button" class="btn btn-md btn-biosur dropdown-toggle" data-toggle="dropdown"><i class="fa fa-share"> </i> Ir a
				                    <span class="caret ml5"></span>
				                  </button>
				                <ul class="dropdown-menu" role="menu">
				                  <li>
				                      <a href="{{ url('bodega_vista_listabannos') }}">Lista de productos</a>
				                  </li>
				                </ul>
				            </div>-->
				        </div>
					</div>
					<div class="panel-body">
						<form id="form_sucursal" method="post" action="{{ url('sucursal_ajax_guardarsucursal') }}" class="form-horizontal" role="form">
							<div class="row">
								<div class="col-md-12">
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
											    <label for="text_nombre" class="control-label">Nombre*</label>
											    <input name="text_nombre" class="form-control" placeholder="Nombre">
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
											    <label for="text_giro" class="control-label">Giro</label>
											    <input name="text_giro" class="form-control" placeholder="Giro">
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
											    <label for="select_comuna" class="control-label">Comuna</label>
											    <select name="select_comuna" class="form-control select2-single" required>
											    	{% for comuna in listaComunas %}
											    	<option value="{{ comuna.id }}">{{ comuna.nombre }}</option>
											    	{% endfor %}
									        	</select>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
											    <label for="text_direccion" class="control-label">Dirección*</label>
											    <input name="text_direccion" class="form-control" placeholder="Dirección">
											</div>
										</div>
										<div class="col-md-12">
											<div class="form-group">
											    <label for="textarea_comentario" class="control-label">Comentario</label>
											    <textarea class="form-control" name="textarea_comentario" rows="3"></textarea>
											</div>
										</div>

									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
	  	</div>
	</div>
{% endblock %}

{% block footerScripts %}
	<script src="{{ absolute_url(asset('vendor/plugins/select2/select2.min.js')) }}"></script>
	<script src="{{ absolute_url(asset('assets/bundles/sucursal/agregar_sucursal.js')) }}"></script>
{% endblock %}
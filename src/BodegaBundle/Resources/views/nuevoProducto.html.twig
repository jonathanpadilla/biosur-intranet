{% extends "BodegaBundle:Layouts:body.html.twig" %}
{% block content %}
	<div class="row">
	  	<div class="col-md-12">
	  		<div class="content-header">
	        <h2> Agregar <b class="text-biosur">Stock de Insumos</b> al sistema.</h2>
	        <p class="lead">Los insumos agregados serán válidos para sucursal <b class="text-biosur">{{ sucursal }}</b>.</p>
	      </div>
				<div id="alerts"></div>
	  		<div class="panel">
					<div class="panel-heading">
						<div class="topbar_options"><!--
				         --><div class="btn-group">
				                  <button type="button" id="button_guardarstock" class="btn btn-md btn-biosur"><i class="fa fa-save"> </i> Guardar</button>
				              </div><!--
				              --><div class="btn-group">
				                  <button type="button" class="btn btn-md btn-biosur" data-id="8" data-toggle="modal" data-target="#nuevoinsumo"><i class="fa fa-plus"> </i> Agregar Insumo</button>
				              </div><!--
				         --><div class="btn-group">
				                    <button type="button" class="btn btn-md btn-biosur dropdown-toggle" data-toggle="dropdown"><i class="fa fa-share"> </i> Ir a
				                    <span class="caret ml5"></span>
				                  </button>
				                <ul class="dropdown-menu" role="menu">
				                  <li>
				                      <a href="{{ url('bodega_vista_listabannos') }}">Lista de productos</a>
				                  </li>
				                </ul>
				            </div>
				        </div>
					</div>
					<div class="panel-body">
						<form id="form_banno" method="post" action="{{ url('bodega_ajax_guardarbanno') }}" class="form-horizontal" role="form">
							<div class="row">
								<div class="col-md-12">
									<h3>Información requerida</h3>
								</div>
							</div>
							<div class="row">
								<div class="col-md-8">
									<div class="row">
										<div class="col-md-12">
											<div class="form-group">
										    <label for="select_producto" class="control-label">Insumos*</label>
										    <select name="select_producto" id="select_producto" class="form-control" required>
								        	</select>
										  </div>
										</div>
										<div id="tipo_producto" class="col-md-12">
											<div class="form-group">
										    <label for="input_cantidad" class="control-label">Cantidad*</label>
										    <input type="number" id="input_cantidad" min="1" class="form-control" placeholder="Cantidad" required>
										  </div>
										</div>
										<div id="tipo_producto" class="col-md-12">
											<div class="form-group">
										    <label for="input_precio" class="control-label">Precio</label>
										    <input type="number" id="input_precio" min="1" class="form-control" placeholder="Precio" required>
										  </div>
										</div>
										<div class="col-md-12">
											<div class="form-group">
										    <label for="textarea_comentario" class="control-label">Comentario</label>
										    <textarea class="form-control" id="textarea_comentario" rows="3"></textarea>
										  </div>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
	  	</div>
	</div>

	<div class="modal fade" id="nuevoinsumo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">Nuevo insumo</h4>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-md-12">
							<div id="tipo_producto" class="col-md-12">
								<div class="form-group">
								    <label for="select_tipoproducto" class="control-label">Nombre</label>
								    <input type="text" id="input_nombreproducto" min="1" class="form-control" placeholder="Nombre" required>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" id="button_guardarproducto" class="btn btn-biosur">Guardar</button>
					<button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block footerScripts %}
	<script src="{{ absolute_url(asset('assets/bundles/bodega/nuevoProducto.js')) }}"></script>
{% endblock %}